<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0.71,0.54,0.6,0.76)">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/message"
               motion:framePosition="50"
               motion:keyPositionType="deltaRelative"
               motion:percentX="-0.2"
               motion:percentY="2.6" />
           <KeyPosition
               motion:motionTarget="@+id/message"
               motion:framePosition="75"
               motion:keyPositionType="deltaRelative"
               motion:percentX="0.7"
               motion:percentY="2.0" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/message" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/message" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/message"
            motion:layout_constraintVertical_bias="0.221"
            motion:layout_constraintHorizontal_bias="0.784" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/second" >
        <Constraint
            motion:layout_constraintVertical_bias="0.022"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.95"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/message" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/second" >
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@+id/message"
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0.7"
                motion:percentY="0.4" />
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/message" />
    </Transition>
</MotionScene>